{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "ES5",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true
  }
}
